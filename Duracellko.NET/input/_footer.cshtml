<footer>
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <ul class="list-inline text-center">
                    <li class="list-inline-item">
                        <a href="https://twitter.com/duracellko">
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-circle fa-stack-2x"></i>
                                <i class="fa-brands fa-twitter fa-stack-1x fa-inverse"></i>
                            </span>
                        </a>
                    </li>
                    <li class="list-inline-item">
                        <a href="https://github.com/duracellko">
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-circle fa-stack-2x"></i>
                                <i class="fa-brands fa-github fa-stack-1x fa-inverse"></i>
                            </span>
                        </a>
                    </li>
                </ul>
                @if (Document.ContainsKey("Canonical"))
                {
                    <p class="text-center small text-muted">Originally published at <a href='@Document.GetString("Canonical")'>@Document.GetString("Canonical")</a>.</p>
                }
                <p>@Html.Partial("_copyright")</p>
                <ul class="list-inline text-center small">
                    @{
                        IDocument rssFeed = Outputs["**/*.rss"].FirstOrDefault();
                        IDocument atomFeed = Outputs["**/*.atom"].FirstOrDefault();
                    }
                    @if (rssFeed != null)
                    {
                        <li class="list-inline-item">
                            <a href="@Context.GetLink(rssFeed)"><i class="fa fa-rss"></i> RSS Feed</a>
                        </li>
                    }
                    @if (atomFeed != null)
                    {
                        <li class="list-inline-item">
                            <a href="@Context.GetLink(atomFeed)"><i class="fa fa-rss"></i> Atom Feed</a>
                        </li>
                    }
                </ul>
                <p class="small">
                    <a href="https://github.com/duracellko/duracellko.net"><i class="fa-brands fa-github"></i> This site is on GitHub</a>
                    <br />
                    <a href="https://statiq.dev">Generated by Statiq</a>
                </p>
            </div>
        </div>
    </div>
</footer>
